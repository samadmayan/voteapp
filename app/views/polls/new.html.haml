-@poll.errors.messages.each do |message|
	=message
= form_for @poll do |f|
	%div.poll-info.col-sm-10
		=f.text_field :about, placeholder: "Short info about your poll", class: 'form-control'
	.poll-questions.col-sm-10
		=f.fields_for :questions do |q|
			= render 'question_fields', f: q
		.links
			= link_to_add_association 'add question', f, :questions
	=f.submit